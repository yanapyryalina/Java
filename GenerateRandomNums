import java.util.*;
import java.io.*;

/*
 * This program creates a file of 500 random numbers
 * to later test various sorting methods 
*/

public class generate500
{
  public static void main(String [] args) throws IOException 
  {
    createRandNums();
  }
  
  public static void createRandNums() throws IOException
  {
    PrintWriter pw = new PrintWriter("rand500.txt");
    for(int i = 0; i < 500; i++)
    {
      pw.println((int) (Math.random() * 500));       
    }    
    pw.flush();
    pw.close();
  }
  
}


